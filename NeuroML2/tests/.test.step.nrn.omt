# Script for running automated tests on OSB, see https://github.com/OpenSourceBrain/osb-model-validation

target: test_HL23PV.hoc
engine: NEURON
mep: .test.step.mep
experiments:
  stepPV:
    observables:
      spike times:
        file:
          path: Soma.si.dat
          columns: [0,1]
          scaling: [1000,1000]
        spike detection:
          method: threshold
        tolerance: 0
